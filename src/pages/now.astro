---
import PageLayout from "../layouts/PageLayout.astro";
import Card from "../components/ui/Card.astro";
import now from "../data/now.json";
---
<PageLayout title="Now">
    <h1 class="text-2xl font-semibold">{now.headline}</h1>

    <div class="mt-8 grid gap-4 md:grid-cols-2">
        <Card class="p-5">
            <div class="font-mono text-xs ui-muted-faint">Current</div>
            <ul class="mt-3 list-disc pl-5 text-sm ui-muted-soft space-y-2">
                {now.items.map((x) => <li>{x}</li>)}
            </ul>
        </Card>

        <Card class="p-5">
            <div class="font-mono text-xs ui-muted-faint">Next</div>
            <ul class="mt-3 list-disc pl-5 text-sm ui-muted-soft space-y-2">
                {now.next.map((x) => <li>{x}</li>)}
            </ul>
        </Card>
    </div>
</PageLayout>
