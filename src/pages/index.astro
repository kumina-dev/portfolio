---
import PageLayout from "../layouts/PageLayout.astro";
import StatusCard from "../components/system/StatusCard.astro";
import EventLog from "../components/system/EventLog.astro";
import Card from "../components/ui/Card.astro";
import { SITE } from "../const/site";
import status from "../data/status.json";
import events from "../data/event-log.json";
import { getProjects } from "../lib/content";

const projects = await getProjects();
const featured = projects[0];
---
<PageLayout title="Dashboard">
	<div class="grid gap-8 lg:grid-cols-[1fr_360px]">
		<section>
			<h1 class="text-3xl font-semibold tracking-tight">{SITE.name}</h1>
			<p class="mt-2 ui-muted">{SITE.description}</p>

			<div class="mt-6 flex gap-3">
				<a class="ui-interactive ui-interactive-surface rounded-xl border ui-border bg-[rgba(var(--panel),0.7)] px-4 py-2 text-sm ui-muted" href="/projects">
					View projects
				</a>
				<a class="ui-interactive ui-interactive-surface rounded-xl border ui-border bg-[rgba(var(--panel),0.7)] px-4 py-2 text-sm ui-muted" href="/contact">
					Contact
				</a>
			</div>

			<div class="mt-10 grid gap-4 sm:grid-cols-2">
				{status.map((s) => <StatusCard label={s.label} value={s.value} hint={s.hint} />)}
			</div>

			{featured ? (
				<div class="mt-10">
					<h2 class="text-lg font-semibold ui-text">Featured</h2>
					<Card class="mt-3 p-5">
						<div class="font-mono text-xs ui-muted-faint">project</div>
						<a class="ui-interactive mt-1 block text-xl ui-text" href={`/projects/${featured.data.slug}`}>
							{featured.data.title}
						</a>
						<p class="mt-2 ui-muted">{featured.data.summary}</p>
						<div class="mt-3 text-sm ui-muted-soft">
							{featured.data.stack.join(" Â· ")}
						</div>
					</Card>
				</div>
			) : null}
		</section>

		<section class="space-y-4">
			<EventLog items={events} />
			<Card class="p-4">
				<div class="font-mono text-xs ui-muted-faint">Quick links</div>
				<div class="mt-3 flex flex-col gap-2 text-sm">
					<a class="ui-interactive ui-muted" href={SITE.links.github}>GitHub</a>
					<a class="ui-interactive ui-muted" href="/stack">Capabilities</a>
					<a class="ui-interactive ui-muted" href="/now">Now</a>
				</div>
			</Card>
		</section>
	</div>
</PageLayout>
