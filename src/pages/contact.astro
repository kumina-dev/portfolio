---
import PageLayout from "../layouts/PageLayout.astro";
import Card from "../components/ui/Card.astro";
import { SITE } from "../const/site";
---
<PageLayout title="Contact">
    <h1 class="text-2xl font-semibold">Contact</h1>
    <p class="mt-2 ui-muted">Preferred: email. Optional: secure details.</p>

    <div class="mt-8 grid gap-4 md:grid-cols-2">
        <Card class="p-5">
            <div class="font-mono text-xs ui-muted-faint">Email</div>
            <div class="mt-2 text-sm">
                <a href={`mailto:${SITE.links.email}`}>{SITE.links.email}</a>
            </div>
        </Card>

        <Card class="p-5">
            <div class="font-mono text-xs ui-muted-faint">GitHub</div>
            <div class="mt-2 text-sm">
                <a href={SITE.links.github}>{SITE.links.github}</a>
            </div>
        </Card>

        {SITE.pgpFingerprint ? (
            <Card class="p-5 md:col-span-2">
                <div class="font-mono text-xs ui-muted-faint">PGP</div>
                <div class="mt-2 font-mono text-sm ui-muted-soft">{SITE.pgpFingerprint}</div>
            </Card>
        ) : null}
    </div>
</PageLayout>
