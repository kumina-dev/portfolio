---
import Card from "../ui/Card.astro";
import { formatDate } from "../../lib/format";
const { items } = Astro.props as { items: Array<{ ts: string; text: string }> };
---
<Card class="p-4">
    <div class="font-mono text-xs text-white/50">Recent log</div>
    <ul class="mt-3 space-y-3">
        {items.map((it) => (
            <li class="flex gap-3">
                <span class="w-24 shrink-0 font-mono text-xs text-white/45">{formatDate(it.ts)}</span>
                <span class="text-sm text-white/75">{it.text}</span>
            </li>
        ))}
    </ul>
</Card>
