---
import PageLayout from "./PageLayout.astro";
const { title, project } = Astro.props as { title: string; project: any };
---
<PageLayout title={title}>
    <div class="grid gap-8 lg:grid-cols-[1fr_320px]">
        <article class="prose">
            <slot />
        </article>

        <aside class="space-y-4">
            <div class="rounded-2xl border border-white/10 bg-white/3 p-4">
                <div class="font-mono text-xs text-white/50">Project</div>
                <div class="mt-1 text-base text-white/90">{project.data.title}</div>
                <div class="mt-2 text-sm text-white/65">{project.data.summary}</div>
            </div>

            <div class="rounded-2xl border border-white/10 bg-white/3 p-4">
                <div class="font-mono text-xs text-white/50">Meta</div>
                <div class="mt-2 text-sm text-white/70">Date: {project.data.date}</div>
                <div class="mt-1 text-sm text-white/70">Status: {project.data.status}</div>
            </div>

            <div class="rounded-2xl border border-white/10 bg-white/3 p-4">
                <div class="font-mono text-xs text-white/50">Links</div>
                <div class="mt-2 space-y-2 text-sm">
                    {project.data.links?.repo ? <a href={project.data.links.repo}>Repo</a> : null}
                    {project.data.links?.demo ? <a href={project.data.links.demo}>Demo</a> : null}
                    {project.data.links?.docs ? <a href={project.data.links.docs}>Docs</a> : null}
                </div>
            </div>
        </aside>
    </div>
</PageLayout>