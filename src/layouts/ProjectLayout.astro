---
import PageLayout from "./PageLayout.astro";
const { title, project } = Astro.props as { title: string; project: any };
---
<PageLayout title={title}>
    <div class="grid gap-8 lg:grid-cols-[1fr_320px]">
        <article class="prose">
            <slot />
        </article>

        <aside class="space-y-4">
            <div class="ui-panel-glass rounded-2xl p-4">
                <div class="font-mono text-xs ui-muted-faint">Project</div>
                <div class="mt-1 text-base ui-text">{project.data.title}</div>
                <div class="mt-2 text-sm ui-muted">{project.data.summary}</div>
            </div>

            <div class="ui-panel-glass rounded-2xl p-4">
                <div class="font-mono text-xs ui-mated-faint">Meta</div>
                <div class="mt-2 text-sm ui-muted">Date: {project.data.date}</div>
                <div class="mt-1 text-sm ui-muted">Status: {project.data.status}</div>
            </div>

            <div class="ui-panel-glass rounded-2xl p-4">
                <div class="font-mono text-xs text-white/50">Links</div>
                <div class="mt-2 space-y-2 text-sm">
                    {project.data.links?.repo ? <a class="ui-interactive ui-muted" href={project.data.links.repo}>Repo</a> : null}
                    {project.data.links?.demo ? <a class="ui-interactive ui-muted" href={project.data.links.demo}>Demo</a> : null}
                    {project.data.links?.docs ? <a class="ui-interactive ui-muted" href={project.data.links.docs}>Docs</a> : null}
                </div>
            </div>
        </aside>
    </div>
</PageLayout>